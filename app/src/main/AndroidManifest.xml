<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cotyoragames.shoppinglist">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".ShoppingApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ShoppingList">
        <activity
            android:name=".ui.insertshopping.InsertShoppingActivity"
            android:exported="true" />
        <activity
            android:name=".ui.shareshopping.ShareShoppingListActivity"
            android:exported="true" />
        <activity
            android:name=".ui.user.friends.AddFriendsActivity"
            android:exported="true" />
        <activity
            android:name=".ui.user.friends.FriendsActivity"
            android:exported="true" />
        <activity
            android:name=".ui.addshopping.AddShoppingActivity"
            android:exported="true" />
        <activity
            android:name=".ui.shoppinglist.ShoppingListActivity"
            android:exported="true" />
        <activity
            android:name=".ui.user.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.shoppingitemlist.ShoppingItemActivity"
            android:exported="true" />

        <!-- Sample AdMob app ID: ca-app-pub-3940256099942544~3347511713 -->
        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-3940256099942544~3347511713"/>
    </application>

</manifest>